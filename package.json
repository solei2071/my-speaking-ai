{
	"name": "my-speaking-ai",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test:unit": "vitest",
		"test:server": "vitest --project server",
		"test:client": "vitest --project client",
		"test": "vitest",
		"predeploy": "npm run format:check && npm run lint && npm run test:server -- --run && npm run build",
		"predeploy:full": "npm run predeploy && npm run test:client -- --run",
		"deploy:check": "node ./scripts/deploy-check.mjs",
		"deploy:prod": "npm run deploy:check && vercel --prod"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-vercel": "^6.3.1",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"playwright": "^1.58.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.48.2",
		"tailwindcss": "^4.1.18",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"@google/genai": "^1.16.0",
		"@supabase/supabase-js": "^2.95.2",
		"chart.js": "^4.5.1",
		"claude": "^0.1.1",
		"zod": "^4.3.6"
	}
}
